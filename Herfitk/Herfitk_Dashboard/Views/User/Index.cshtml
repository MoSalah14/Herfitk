@model IEnumerable<Herfitk.Core.Models.AppUser>

@{
    ViewData["Title"] = "Index";
}


<h1 class="text-center">New Users</h1>
<p>
    <a asp-action="Add" class="btn btn-primary">Create New</a>
</p>
<form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0" asp-controller="Categ" asp-action="Index" method="get">
    <div class="input-group" style="width: 500px; margin-bottom: 100px; padding:20px;">
        <input class="form-control" type="text" name="SearchString" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
        <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
    </div>
    @*   <input type="submit" formaction="@Url.Action("Index", "Herify")" value="Reset" />
    <input type="submit" formaction="@Url.Action("IndexId", "Herify")" value="Get Herfy By Id" /> *@
</form>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NationalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NationalIdImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NationalId)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PersonalImage))
                    {
                        <img src="@item.PersonalImage" alt="Personal Image" style="max-width: 100px; max-height: 100px; border-radius: 50px" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.NationalIdImage))
                    {
                        <img src="@item.NationalIdImage" alt="National ID Image" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-action="Edite" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="IndexId" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
