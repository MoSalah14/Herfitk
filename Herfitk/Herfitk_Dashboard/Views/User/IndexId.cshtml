@model Herfitk.Core.Models.AppUser

@{
    ViewData["Title"] = "IndexId";
}

<h1>Details Of User</h1>

<div>
    <h4>AppUser</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NationalId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NationalId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonalImage)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PersonalImage))
            {
                <img src="@Url.Content(Model.PersonalImage)" alt="Personal Image" style="max-width: 100px; max-height: 100px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NationalIdImage)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.NationalIdImage))
            {
                <img src="@Url.Content(Model.NationalIdImage)" alt="Personal Image" style="max-width: 100px; max-height: 100px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

    </dl>
</div>
<div>
    
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
