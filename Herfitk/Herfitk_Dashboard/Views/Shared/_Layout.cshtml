
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Herfitk Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Herfitk_Dashboard.styles.css" asp-append-version="true" />
	<link href="~/css/Dash.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Herfitk Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="darkModeToggle">
                <label class="form-check-label" for="darkModeToggle">Dark Mode</label>
            </div>
        </div>
    </nav>

    <div class="container-fluid dashboard-container">
        <div class="row">
            <div class="col-lg-2">
                <!-- Sidebar -->
                <div class="bg-light border-right" id="sidebar-wrapper">
                    <div class="sidebar-heading">Dashboard</div>
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Index", "Herify")" class="list-group-item list-group-item-action bg-light mb-3">Manage Herify</a>
                        <a href="@Url.Action("Index", "Categ")" class="list-group-item list-group-item-action bg-light mb-3">Manage Category</a>
                        <a href="@Url.Action("Index", "Staff")" class="list-group-item list-group-item-action bg-light mb-3">Manage Staff</a>
                        <a href="@Url.Action("Index", "User")" class="list-group-item list-group-item-action bg-light mb-3">Manage User</a>
                        <a href="@Url.Action("#", "#")" class="list-group-item list-group-item-action bg-light mb-3">Report</a>
                    </div>
                </div>
                <!-- /#sidebar-wrapper -->
            </div>
            <div class="col-lg-9">
                <!-- Page Content -->
                <div class="dashboard-content">
                    <h2>Welcome to Herfitk Dashboard</h2>
                    <div>
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </header>
    <footer class="border-top footer text-muted" style="margin-top: 100">
        <div class="container">
            &copy; 2024 - Herfitk_Dashboard - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle dark mode
        document.getElementById('darkModeToggle').addEventListener('change', function () {
            document.body.classList.toggle('dark-mode');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>