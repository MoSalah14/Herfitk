@model Herfitk.Core.Models.Data.Category

@{
    ViewData["Title"] = "Delete";
}

<body>
    <div class="container text-center">
        <h1>Delete Category</h1>
        <h3>Are you sure you want to delete this Category?</h3>
        <hr />
        <div>
            <dl class="row">
                <dt class="col-sm-2">Category Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.CategoryName)</dd>
                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Descraption)</dd>
                <dt class="col-sm-2">Image</dt>
                <dd class="col-sm-10">
                    @if (Model.Image != null && Model.Image.Length > 0)
                    {
                        <img src="@Model.Image" alt="Image" style="max-width: 100px; max-height: 100px;" />
                    }
                </dd>
            </dl>
        </div>
        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>

    <!-- Bootstrap JavaScript (Optional if you need JS features) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>