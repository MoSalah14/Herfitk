@model IEnumerable<Herfitk.Core.Models.Data.Category>

@{
    ViewData["Title"] = "Index";
}

<body>
    <h1 class="text-center">Category</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Category</a>
    </p>
    <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0" asp-controller="Categ" asp-action="Index" method="get">
        <div class="input-group" style="width: 500px; margin-bottom: 100px; padding:20px;">
            <input class="form-control" type="text" name="SearchString" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
            <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
        </div>
    </form>
    <table class="table table-striped table-bordered" style="padding:20px">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descraption)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>Edit</th>
                <th>Details</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody >
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descraption)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" alt="Image" style="max-width: 100px; max-height: 100px; border-radius: 50px" />
                        }
                        else
                        {
                            <span>No image available</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                     </td>
                     <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> 
                     </td>
                       <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                       </td>
                  
                </tr>
            }
        </tbody>
    </table>

    <!-- Bootstrap JavaScript (Optional if you need JS features) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</table>
